<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        
    </style>
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionBarTabStyle">@style/CustomActionBarTab</item>
        <item name="android:actionBarTabTextStyle">@style/CustomActionBarTabText</item>
        <item name="android:actionBarTabBarStyle">@style/CustomActionBarTabBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="CustomActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#c27ba0</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>
    
    <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>
    
    <!-- ActionBarTab styles -->
    <style name="CustomActionBarTab" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/custom_tab_indicator_selector</item>
        <item name="android:textColor">#c27ba0</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="CustomActionBarTabText" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">#c27ba0</item>
    </style>
    
    <style name="CustomActionBarTabBar" parent="@android:style/Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:showDividers">middle</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="android:divider">#c27ba0</item>
    </style>
    
    <!-- Layout fields -->
    <style name="job_details_title_style" parent="android:Widget.Holo.Light.TextView">
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/all_round_corner_gray_shape</item>
        <item name="android:maxWidth">280dp</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
</resources>
