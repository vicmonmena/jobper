<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/jobTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="38dp"
        android:layout_toLeftOf="@+id/imageArrow"
        android:ellipsize="end"
        android:hint="@string/job_title_hint"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/jobDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/jobTitleTextView"
        android:layout_alignRight="@+id/jobTitleTextView"
        android:layout_below="@+id/jobTitleTextView"
        android:layout_marginTop="20dp"
        android:hint="@string/job_date_hint"
        android:textColor="#c27ba0"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/imageArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/jobTitleTextView"
        android:layout_marginRight="25dp"
        android:contentDescription="@string/show_job_details"
        android:src="@drawable/ic_arrow" />

</RelativeLayout>
